from django.shortcuts import get_object_or_404, render
from django.http import HttpResponseRedirect
from django.urls import reverse
from django.views import generic
from django.utils import timezone

from quiz.models import Question, Choice, Player


class IndexView(generic.ListView):
    template_name = 'quiz/index.html'
    context_object_name = 'latest_player_list'

    def get_queryset(self):
        """Return the last five published questions."""
        return Player.objects.order_by('-pub_date')[:5]


class DetailView(generic.ListView):
    template_name = 'quiz/detail.html'
    context_object_name = 'latest_question_list'

    def get_queryset(self):
        """Return the last five published questions."""
        return Question.objects.all


class ResultsView(generic.ListView):
    template_name = 'quiz/results.html'    
    context_object_name = 'latest_question_list'

    def get_queryset(self):
        """Return the last five published questions."""
        return Question.objects.all

def add_player(request):
    question_amount = Question.objects.count()+1
    print(str(request.POST)+"sxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxxsxx")
    point = 0
    for i in range(1,question_amount):
        try: 
            check = int(request.POST[str(i)])
            if check == 1:
                point = point+1
        except:
            pass
    the_player = request.POST['addPlayer']
    p = Player(player_text = the_player, score = point, pub_date=timezone.now())
    p.save()
    return HttpResponseRedirect(reverse('quiz:index'))


